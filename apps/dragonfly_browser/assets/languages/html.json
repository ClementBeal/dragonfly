{
	"name": "HTML",
	"version": "1.0.0",
	"fileTypes": [
		"html",
		"htm"
	],
	"scopeName": "text.html.basic",
	"foldingStartMarker": "<(?!\\/|!DOCTYPE)[^>]*?>",
	"foldingStopMarker": "<\\/[^>]*?>",
	"patterns": [
		{
			"name": "meta.doctype.html",
			"match": "<!DOCTYPE\\s+[^>]+>"
		},
		{
			"name": "meta.tag.html",
			"begin": "<(?!\\/)([a-zA-Z][a-zA-Z0-9:-]*)\\b",
			"beginCaptures": {
				"1": {
					"name": "entity.name.tag.html"
				}
			},
			"end": ">",
			"patterns": [
				{
					"include": "#tag-attributes"
				}
			]
		},
		{
			"name": "meta.tag.close.html",
			"begin": "<\\/",
			"end": ">",
			"beginCaptures": {
				"0": {
					"name": "entity.name.tag.html"
				}
			}
		},
		{
			"name": "meta.embedded.style",
			"begin": "<style\\b[^>]*>",
			"end": "<\\/style>",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		{
			"name": "meta.embedded.script",
			"begin": "<script\\b[^>]*>",
			"end": "<\\/script>",
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		{
			"include": "#comments"
		},
		{
			"include": "#entities"
		}
	],

	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.block.html",
					"begin": "<!--",
					"end": "-->"
				}
			]
		},
		"tag-attributes": {
			"patterns": [
				{
					"name": "entity.other.attribute-name.html",
					"match": "\\b[a-zA-Z0-9:-]+\\b"
				},
				{
					"name": "string.quoted.double.html",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.entity.html",
							"match": "&[a-zA-Z0-9]+?;"
						}
					]
				},
				{
					"name": "string.quoted.single.html",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.entity.html",
							"match": "&[a-zA-Z0-9]+?;"
						}
					]
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "constant.character.entity.html",
					"match": "&[a-zA-Z0-9]+?;"
				}
			]
		}
	}
}
